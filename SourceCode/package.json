{
  "name": "a-real-web-based-input-overlay",
  "version": "1.1.0",
  "description": "A Real Web-based Input Overlay - displays keyboard, mouse, and gamepad inputs",
  "author": "zitongcharliedeng",
  "repository": {
    "type": "git",
    "url": "https://github.com/zitongcharliedeng/a_web-based_input-overlay.git"
  },
  "main": "main.js",
  "scripts": {
    "build": "npm run build:webapp && npm run build:desktop",
    "build:webapp": "cd WebApp && vite build",
    "build:desktop": "tsc -p DesktopWrappedWebapp/tsconfig.json",
    "dev": "concurrently \"npm run dev:webapp\" \"npm run watch:desktop\"",
    "dev:webapp": "cd WebApp && vite",
    "watch:desktop": "tsc -p DesktopWrappedWebapp/tsconfig.json --watch",
    "type-check": "tsc -p DesktopWrappedWebapp/tsconfig.json --noEmit",
    "lint": "eslint .",
    "clean": "find . -name '*.js' -not -path '*/node_modules/*' -not -path '*/_bundleAllCompiledJavascriptForWebapp/*' -delete && find . -name '*.js.map' -delete",
    "electron:dev": "npm run build:desktop && concurrently \"npm run dev:webapp\" \"wait-on http://localhost:5173 && electron DesktopWrappedWebapp/main.js --dev --with-dev-console\"",
    "electron:prod": "npm run build && concurrently \"cd WebApp && vite preview\" \"wait-on http://localhost:4173 && electron DesktopWrappedWebapp/main.js --with-dev-console\"",
    "electron:clickthrough-readonly": "npm run build && concurrently \"cd WebApp && vite preview\" \"wait-on http://localhost:4173 && electron DesktopWrappedWebapp/main.js --in-clickthrough-readonly-mode\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "concurrently": "^9.1.0",
    "electron": "^34.5.8",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "http-server": "^14.1.1",
    "node-addon-api": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^6.0.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@kmamal/sdl": "^0.11.13",
    "uiohook-napi": "^1.5.4",
    "zod": "^4.1.12"
  },
  "build": {
    "appId": "com.zitongcharliedeng.inputoverlay",
    "productName": "A Real Web-based Input Overlay",
    "npmRebuild": false,
    "publish": {
      "provider": "github",
      "owner": "zitongcharliedeng",
      "repo": "a_web-based_input-overlay"
    },
    "directories": {
      "output": "../dist",
      "buildResources": "../build"
    },
    "files": [
      "package.json",
      {
        "from": "./DesktopWrappedWebapp",
        "to": ".",
        "filter": [
          "**/*",
          "!node_modules/**",
          "!**/*.ts",
          "!**/*.map"
        ]
      },
      {
        "from": "./WebApp/_bundleAllCompiledJavascriptForWebapp",
        "to": "WebApp",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "node_modules/@kmamal/sdl",
        "to": "node_modules/@kmamal/sdl"
      },
      {
        "from": "node_modules/uiohook-napi",
        "to": "node_modules/uiohook-napi"
      }
    ],
    "win": {
      "target": "nsis",
      "sign": null
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
