{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "analog-keyboard-overlay",
  "version": "0.1.0",
  "identifier": "com.github.zitongcharliedeng.analog-keyboard-overlay",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run build:vite"
  },
  "app": {
    "windows": [
      {
        "title": "Analog Keyboard Overlay",
        "width": 1920,
        "height": 1080,
        "x": 0,
        "y": 0,
        "minWidth": 400,
        "minHeight": 300,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "fullscreen": false,
        "resizable": true,
        "maximizable": false,
        "minimizable": true,
        "closable": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
