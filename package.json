{
  "name": "analog-keyboard-overlay",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "prebuild": "tsx SourceCode/WebApp/_helpers/generateVersionGitCommitHash.ts",
    "build": "npm run build:webapp && npm run build:desktop",
    "build:webapp": "tsc -p SourceCode/_devTools/tsconfig.webapp.json",
    "build:desktop": "tsc -p SourceCode/_devTools/tsconfig.desktop.json",
    "watch": "concurrently \"npm run watch:webapp\" \"npm run watch:desktop\"",
    "watch:webapp": "tsc -p SourceCode/_devTools/tsconfig.webapp.json --watch",
    "watch:desktop": "tsc -p SourceCode/_devTools/tsconfig.desktop.json --watch",
    "type-check": "tsc -p SourceCode/_devTools/tsconfig.webapp.json --noEmit && tsc -p SourceCode/_devTools/tsconfig.desktop.json --noEmit",
    "lint": "eslint SourceCode --ext .ts --config SourceCode/_devTools/.eslintrc.cjs",
    "clean": "find SourceCode -name '*.js' -not -path '*/node_modules/*' -delete && find SourceCode -name '*.js.map' -delete",
    "electron:dev": "npm run build && electron SourceCode/DesktopWrappedWebapp/main.js",
    "electron:clickthrough-readonly": "npm run build && electron SourceCode/DesktopWrappedWebapp/main.js --clickthrough-readonly",
    "serve": "http-server SourceCode/WebApp -p 8080 -o"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "concurrently": "^9.1.0",
    "electron": "^34.5.8",
    "eslint": "^9.39.1",
    "http-server": "^14.1.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "dependencies": {
    "@kmamal/sdl": "^0.11.13",
    "uiohook-napi": "^1.5.4",
    "zod": "^4.1.12"
  }
}
